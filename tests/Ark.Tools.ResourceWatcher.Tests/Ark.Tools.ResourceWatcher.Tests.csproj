<Project Sdk="Microsoft.NET.Sdk">


  <PropertyGroup Label="Test Settings">
    <IsTestProject>true</IsTestProject>
    <IsPackable>false</IsPackable>
    
    <OutputType>Exe</OutputType>

    <EnableMSTestRunner>true</EnableMSTestRunner>

    <!-- 
      IMPORTANT: SqlStateProvider integration tests require sequential framework execution.
      The EnsureTableAreCreated() method drops/recreates UDT types, causing conflicts 
      when net8.0 and net10.0 run in parallel against the same database.
    -->
    <TestTfmsInParallel>false</TestTfmsInParallel>
    <TestingPlatformDisableParallel>true</TestingPlatformDisableParallel>

    <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute</ExcludeByAttribute>

  </PropertyGroup>

  <ItemGroup Label="Testing Platform Settings">
    <PackageReference Include="Microsoft.Testing.Extensions.CrashDump" />
    <PackageReference Include="Microsoft.Testing.Extensions.CodeCoverage" />
    <PackageReference Include="Microsoft.Testing.Extensions.HangDump" />
    <PackageReference Include="Microsoft.Testing.Extensions.HotReload" />
    <PackageReference Include="Microsoft.Testing.Extensions.Retry" />
    <PackageReference Include="Microsoft.Testing.Extensions.TrxReport" />
    <PackageReference Include="Microsoft.Testing.Extensions.AzureDevOpsReport" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AwesomeAssertions" />    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" />    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="Moq" />
    <PackageReference Include="MSTest.TestAdapter" />
    <PackageReference Include="MSTest.TestFramework" />
    <PackageReference Include="NodaTime.Testing" />
    <PackageReference Include="Reqnroll.MsTest" />
    <PackageReference Include="Reqnroll.Tools.MsBuild.Generation" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\common\Ark.Tools.Nodatime.Dapper\Ark.Tools.Nodatime.Dapper.csproj" />
    <ProjectReference Include="..\..\src\common\Ark.Tools.Reqnroll\Ark.Tools.Reqnroll.csproj" />
    <ProjectReference Include="..\..\src\resourcewatcher\Ark.Tools.ResourceWatcher\Ark.Tools.ResourceWatcher.csproj" />
    <ProjectReference Include="..\..\src\resourcewatcher\Ark.Tools.ResourceWatcher.WorkerHost\Ark.Tools.ResourceWatcher.WorkerHost.csproj" />
    <ProjectReference Include="..\..\src\resourcewatcher\Ark.Tools.ResourceWatcher.Sql\Ark.Tools.ResourceWatcher.Sql.csproj" />
    <ProjectReference Include="..\..\src\resourcewatcher\Ark.Tools.ResourceWatcher.WorkerHost.Sql\Ark.Tools.ResourceWatcher.WorkerHost.Sql.csproj" />
    <ProjectReference Include="..\..\src\resourcewatcher\Ark.Tools.ResourceWatcher.Testing\Ark.Tools.ResourceWatcher.Testing.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>

    <None Update="appsettings.IntegrationTests.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    
    <None Update="reqnroll.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>

  </ItemGroup>

</Project>
