<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <!-- 
      IMPORTANT: SqlStateProvider integration tests require sequential framework execution.
      The EnsureTableAreCreated() method drops/recreates UDT types, causing conflicts 
      when net8.0 and net10.0 run in parallel against the same database.
    -->
    <TestTfmsInParallel>false</TestTfmsInParallel>
    <TestingPlatformDisableParallel>true</TestingPlatformDisableParallel>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Moq" />
    <PackageReference Include="Reqnroll.MsTest" />
    <PackageReference Include="Reqnroll.Tools.MsBuild.Generation" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Features\*.feature">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="TestData\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Ark.ResourceWatcher.Sample\Ark.ResourceWatcher.Sample.csproj" />
    <PackageReference Include="Ark.Tools.ResourceWatcher.Testing" />
    <PackageReference Include="Ark.Tools.Reqnroll" />
  </ItemGroup>

</Project>
