<Project Sdk="Microsoft.NET.Sdk">

	<!-- the other props are defined in Directory.Build.props -->

	<!--===================Configuration for Nuget Package=========================-->
	<PropertyGroup>

		<TargetFrameworks>net10.0</TargetFrameworks>

		<Description>Extensions of AspNetCore HealthChecks</Description>
		<PackageTags>Ark;C#;.NET;Framework;AspNetCore;HealthCheck;</PackageTags>


		<!--Update these information when releasing a new version of the NugetPackage-->
		<PackageReleaseNotes></PackageReleaseNotes>

		<Version>$(AspNetCoreGroupVersion)</Version>
		<VersionSuffix>$(AspNetCoreGroupVersionSuffix)</VersionSuffix>

		<Version Condition=" '$(VersionSuffix)' != '' ">$(Version)-$(VersionSuffix)</Version>

		<AutoGenerateBindingRedirects></AutoGenerateBindingRedirects>
	</PropertyGroup>
	<!--===============================================================================-->

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="AspNetCore.HealthChecks.AzureServiceBus" Version="9.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.Network" Version="9.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.Oracle" Version="9.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.Publisher.ApplicationInsights" Version="9.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.SqlServer" Version="9.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.UI" Version="9.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.UI.Client" Version="9.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.UI.InMemory.Storage" Version="9.0.0" />
		<PackageReference Include="Azure.Messaging.ServiceBus" Version="7.20.1" />
		<PackageReference Include="Azure.Identity" Version="1.17.1" />
		<PackageReference Include="Microsoft.ApplicationInsights" Version="2.23.0" />
		<!-- Needed due to vulnerabilities from dependency AspNetCore.HealthChecks.UI that is not updated  -->
		<PackageReference Include="KubernetesClient" Version="18.0.13" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\common\Ark.Tools.Core\Ark.Tools.Core.csproj" />
	  <ProjectReference Include="..\..\common\Ark.Tools.SimpleInjector\Ark.Tools.SimpleInjector.csproj" />
	  <ProjectReference Include="..\..\common\Ark.Tools.SystemTextJson\Ark.Tools.SystemTextJson.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="UIHealthChecks.css">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
