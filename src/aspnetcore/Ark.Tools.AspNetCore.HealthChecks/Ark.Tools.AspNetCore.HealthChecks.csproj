<Project Sdk="Microsoft.NET.Sdk">

	<!-- the other props are defined in Directory.Build.props -->

	<!--===================Configuration for Nuget Package=========================-->
	<PropertyGroup>

		<TargetFrameworks>net10.0</TargetFrameworks>

		<Description>Extensions of AspNetCore HealthChecks</Description>
		<PackageTags>Ark;C#;.NET;Framework;AspNetCore;HealthCheck;</PackageTags>


		<!--Update these information when releasing a new version of the NugetPackage-->
		<PackageReleaseNotes></PackageReleaseNotes>

		<Version>$(AspNetCoreGroupVersion)</Version>
		<VersionSuffix>$(AspNetCoreGroupVersionSuffix)</VersionSuffix>

		<Version Condition=" '$(VersionSuffix)' != '' ">$(Version)-$(VersionSuffix)</Version>

		<AutoGenerateBindingRedirects></AutoGenerateBindingRedirects>
    
    <!-- Trimming Support -->
    <IsTrimmable>true</IsTrimmable>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
	</PropertyGroup>
	<!--===============================================================================-->

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="AspNetCore.HealthChecks.AzureServiceBus" />
		<PackageReference Include="AspNetCore.HealthChecks.Network" />
		<PackageReference Include="AspNetCore.HealthChecks.Oracle" />
		<PackageReference Include="AspNetCore.HealthChecks.Publisher.ApplicationInsights" />
		<PackageReference Include="AspNetCore.HealthChecks.SqlServer" />
		<PackageReference Include="AspNetCore.HealthChecks.UI" />
		<PackageReference Include="AspNetCore.HealthChecks.UI.Client" />
		<PackageReference Include="AspNetCore.HealthChecks.UI.InMemory.Storage" />
		<PackageReference Include="Azure.Messaging.ServiceBus" />
		<PackageReference Include="Azure.Identity" />
		<PackageReference Include="Microsoft.ApplicationInsights" />
		<!-- Needed due to vulnerabilities from dependency AspNetCore.HealthChecks.UI that is not updated  -->
		<PackageReference Include="KubernetesClient" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\common\Ark.Tools.Core\Ark.Tools.Core.csproj" />
	  <ProjectReference Include="..\..\common\Ark.Tools.SimpleInjector\Ark.Tools.SimpleInjector.csproj" />
	  <ProjectReference Include="..\..\common\Ark.Tools.SystemTextJson\Ark.Tools.SystemTextJson.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="UIHealthChecks.css">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
