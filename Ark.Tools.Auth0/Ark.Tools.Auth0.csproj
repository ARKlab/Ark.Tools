<Project Sdk="Microsoft.NET.Sdk">
  <!-- the other props are defined in Directory.Build.props -->
  <!--===================Configuration for Nuget Package=========================-->
  <PropertyGroup>
    <Description>Extensions of Auth0</Description>
    <PackageTags>Ark;C#;.NET;Framework;Auth0</PackageTags>
    <!--Update these information when releasing a new version of the NugetPackage-->
    <PackageReleaseNotes>
    </PackageReleaseNotes>
    
    <Version>$(ArkToolsCoreVersion)</Version>
    <VersionSuffix>$(ArkToolsCoreVersionSuffix)</VersionSuffix>
  
  
    <Version Condition=" '$(VersionSuffix)' != '' ">$(Version)-$(VersionSuffix)</Version>
  </PropertyGroup>
  <!--===============================================================================-->
  <ItemGroup>
    <PackageReference Include="Auth0.AuthenticationApi" />
    <PackageReference Include="Auth0.ManagementApi" />
    <PackageReference Include="JWT" />
    <PackageReference Include="Polly" />
    <PackageReference Include="Polly.Caching.Memory" />
  </ItemGroup>
</Project>